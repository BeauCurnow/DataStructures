
@{
    ViewBag.Title = "StackDisplay";
}

<h2>Stack Index</h2>

<body>
    <div>
        <ul>
            <li>
                <a href="@Url.Action("AddOne", "Stack")" class="w3-bar-item w3-button">Add One Item to Stack</a>
            </li>
            <li>
                <a href="@Url.Action("AddList", "Stack")" class="w3-bar-item w3-button">Add Huge List of Items to Stack</a>
            </li>
            <li>
                <a href="@Url.Action("Display", "Stack")" class="w3-bar-item w3-button">Display Stack</a>
            </li>
            <li>
                <a href="@Url.Action("Delete", "Stack")" class="w3-bar-item w3-button">Delete Stack</a>
            </li>
            <li>
                <a href="@Url.Action("Clear", "Stack")" class="w3-bar-item w3-button">Clear Stack</a>
            </li>
            <li>
                <a href="@Url.Action("Search", "Stack")" class="w3-bar-item w3-button">Search Stack</a>
            </li>
            <li>
                <a href="@Url.Action("Menu", "Stack")" class="w3-bar-item w3-button">Return</a>
            </li>
        </ul>
    </div>
@if (ViewBag.MyStack != null)
{
       foreach (var sData in ViewBag.MyStack)
       {
        <p>@sData</p>
       }
}
else
{
    <p>There is nothing in the stack.</p>
}

</body>

